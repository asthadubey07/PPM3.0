@model PPM.Model.Project

@{
    ViewData["Title"] = "Project Details";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
      <strong>Success!</strong>  @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Failed!.</strong>@TempData["ErrorMessage"]
    </div>
}




<div class="container text-center">
    <h2 class="mb-4 font-weight-bold text-uppercase">Project Details</h2>
    <div class="d-flex justify-content-center">
    @if (Model != null)
    {
        
        <dl class="row">
            <dt class="col-sm-2">Project ID:</dt>
            <dd class="col-sm-10">@Model.ProjectId</dd>

            <dt class="col-sm-2">Name:</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Start Date:</dt>
            <dd class="col-sm-10">@Model.StartDate</dd>

            <dt class="col-sm-2">End Date:</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        </dl>
        
    }
    else
    {
        <p>Project not found.</p>
    }
    </div>
    <div class="mt-3">
        <a asp-controller="ProjectEmployee" asp-action="EmployessInProject" asp-route-id="@Model.ProjectId"
            class="btn btn-info"><i class="bi bi-view-list"></i> View Assigned Employees</a>

        <a asp-action="Index" class="btn btn-dark" style="margin-left: 5px;"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
    </div>
    
</div>


