@model PPM.Model.Project
@{
    ViewData["Title"] = "";
}
<div class="alert alert-info" role="alert">
<p> Project Created Successfully! Do you want to add an employee to this project?</p>
</div>

<div class="text-center">
    <div class="row">
        <div class="col">
            <form asp-action="AddEmployeeConfirmation" asp-controller="ProjectEmployee" method="post">
                <input type="hidden" name="projectId" value="@Model" />
                <button type="submit" class="btn btn-success"style="margin-left:20px;margin-top:25px;" ><i class="bi bi-person-plus-fill"></i>Yes, Add Employee</button>
            </form>
        </div>
        <div class="col">
            <form asp-action="Index" asp-controller="Project" method="get">
                <button type="submit" class="btn btn-dark"style="margin-right:20px;margin-top:25px;"><i class="bi bi-skip-backward-fill"></i>No, Back to Project List</button>
            </form>
        </div>
    </div>
</div>

