@model PPM.Model.Project

@{
    ViewData["Title"] = "Delete Project";
}

<div class="container text-center">
    <h2 class="mb-4 font-weight-bold text-uppercase">Delete Project</h2>
    <div class="d-flex justify-content-center">
        <dl class="row">
            <dt class="col-sm-2">Project ID:</dt>
            <dd class="col-sm-10">@Model.ProjectId</dd>

            <dt class="col-sm-2">Name:</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Start Date:</dt>
            <dd class="col-sm-10">@Model.StartDate</dd>

            <dt class="col-sm-2">End Date:</dt>
            <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        </dl>
    </div>

    <div class="mt-3 text-center">
        <form asp-action="DeleteConfirmed" method="post" asp-route-id="@Model.ProjectId">
            <input asp-for="ProjectId" type="hidden" />

            <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Confirm Delete</button>
            <a asp-action="Index" class="btn btn-dark ml-3" style="margin-left: 5px;"><i
                    class="bi bi-x-octagon-fill"></i> Cancel</a>
        </form>
    </div>
</div>
