@model IEnumerable<PPM.Model.Project>

@{
    ViewData["Title"] = "Project List";
}


<div class="container">
    <h2 class="font-weight-bold text-uppercase">Project List</h2>

    <table class="table">
        <thead>
            <tr>
                <th class="font-weight-bold text-uppercase">Project ID</th>
                <th class="font-weight-bold text-uppercase">Project Name</th>
                <th class="font-weight-bold text-uppercase">Start Date</th>
                <th class="font-weight-bold text-uppercase">End Date</th>
                <th class="font-weight-bold text-uppercase">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {

                foreach (var project in Model)
                {

                    <tr>
                        <td>@project.ProjectId</td>
                        <td>@project.Name</td>
                        <td>@project.StartDate.ToShortDateString()</td>
                        <td>@project.EndDate.ToShortDateString()</td>
                        <td>



                            <a asp-controller="Project" asp-action="Details" asp-route-id="@project.ProjectId"
                                class="btn btn-outline-info"><i class="bi bi-person-circle"></i> DETAILS</a>

                            <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-outline-warning"
                                style="margin-left: 7px;"><i class="bi bi-pencil-square"></i> UPDATE</a>

                            <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-outline-danger"
                                onclick="return confirm('Are you sure you want to delete this Project')"
                                style="margin-left: 7px;"><i class="bi bi-trash-fill"></i> DELETE</a>
                        </td>
                    </tr>
                }

            }
             else
                {
                    <tr>
                        <td colspan="3">
                            <p class="text-center">No projects found.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
  <div>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> CREATE NEW</a>
        </div>
   
</div>
