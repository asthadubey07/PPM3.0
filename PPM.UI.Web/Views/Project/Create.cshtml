@model PPM.Model.Project
@{
    ViewData["Title"] = "Create Project";
}

<h2 class="text-center font-weight-bold text-uppercase">Create Project</h2>

<form asp-action="Create" method="post" enctype="application/json">
    <div class="form-group">
        <label asp-for="ProjectId" class="font-weight-bold text-uppercase">Project ID:</label>
        <input asp-for="ProjectId" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" placeholder="Project ID"/>
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="font-weight-bold text-uppercase">Project Name:</label>
        <input asp-for="Name" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" placeholder="Project Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="font-weight-bold text-uppercase">Start Date:</label>
        <input asp-for="StartDate" type="date" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" placeholder="Start Date"/>
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="font-weight-bold text-uppercase">End Date:</label>
        <input asp-for="EndDate" type="date" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;"placeholder="End Date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success" style="margin-top:15px;"><i class="bi bi-plus-circle-fill"></i>Create</button>
     <a asp-action="Index" class="btn btn-dark" style="margin-left: 5px; margin-top: 15px;"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
     </div>
</form>



