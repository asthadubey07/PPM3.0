@model List<PPM.Model.Role>

@{
    ViewData["Title"] = "Role List";
}

<div class="container-xl">
 
        <h2 class="font-weight-bold text-uppercase">Roles List</h2>

        <table class="table">
            <thead>
                <tr>
                    <th class="font-weight-bold text-uppercase">ROLE ID</th>
                    <th class="font-weight-bold text-uppercase">ROLE NAME</th>
                    <th class="font-weight-bold text-uppercase">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.RoleId</td>
                            <td>@role.Name</td>
                            <td>
                                <a asp-controller="Role" asp-action="Details" asp-route-roleId="@role.RoleId"
                                    class="btn btn-outline-info"><i class="bi bi-person-circle"></i> DETAILS</a>
                                <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-outline-warning"
                                    style="margin-left: 7px;"><i class="bi bi-pencil-square"></i> UPDATE</a>
                                <a asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-outline-danger"
                                    onclick="return confirm('Are you sure you want to delete this role')"
                                    style="margin-left: 7px;"><i class="bi bi-trash-fill"></i> DELETE</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <p class="text-center">No roles found.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i> CREATE NEW</a>
        </div>
  
</div>
