@model PPM.Model.Role

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container">
    <h2 class="text-center font-weight-bold text-uppercase">Update Role</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="RoleId" />


 <div class="form-group">
            <label asp-for="RoleId" class="font-weight-bold text-uppercase">Role ID:</label>
            <span  class="form-control-plaintext" style="margin-top: 5px; border: 1px solid darkslategray;">@Model.RoleId</span>
        </div>
        <div class="form-group">
            <label asp-for="Name"class="font-weight-bold text-uppercase">Name:</label>
            <input asp-for="Name" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>
         <div class="text-center">
        <div class="form-group"style="margin-top: 15px;">
            <button type="submit" class="btn btn-success"><i class="bi bi-save2-fill"></i>Save Changes</button>
             <a asp-action="Index" class="btn btn-danger"style="margin-left: 9px;"><i class="bi bi-x-octagon-fill"></i>Cancel</a>
        </div>
        </div>
    </form>
</div>

