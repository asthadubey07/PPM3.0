@model PPM.Model.Employee

@{
    ViewData["Title"] = "Login";
}
<html>
<head>
    <style>
        body {
            background-image:  url('https://www.qmul.ac.uk/media/qmul/media/news/items/se/2017-images/item199675.jpg');
            margin: 0;
        }
    </style>
</head>
<body>
<div class="card-body">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="bg-light rounded p-4" style="background-color: #d3f9d8;">
                    <h2 class="text-center mb-4">Login</h2>

                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="Email" class="font-weight-bold text-uppercase">Email</label>
                            <input asp-for="Email" class="form-control"
                                style="margin-top: 5px; border: 1px solid darkslategray;" placeholder="User Email" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" class="font-weight-bold text-uppercase">Password</label>
                            <input asp-for="Password" type="password" class="form-control"
                                style="margin-top: 6px; border: 1px solid darkslategray;" placeholder="User Password" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-outline-success" style="margin-top: 15px;">
                                Login <i class="bi bi-box-arrow-right"></i>
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
