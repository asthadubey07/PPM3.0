@model PPM.Model.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<style>
dl {
  display: flex;
  flex-direction: column;
  align-items: center;
}

dt, dd {
  margin: 0;
}
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
      <strong>Success!</strong>  @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Failed!.</strong>@TempData["ErrorMessage"]
    </div>
}

<div class="container text-center">
    <h2 class="mb-4 font-weight-bold text-uppercase">Employee Details</h2>
    <div class="d-flex justify-content-center">
    @if (Model != null)
    {
        <dl class="row">
            <dt class="col-sm-10">Employee ID:</dt> 
            <dd class="col-sm-18">@Model.EmployeeId</dd>
            

            <dt class="col-sm-10">First Name:</dt>
            <dd class="col-sm-18">@Model.FirstName</dd>

            <dt class="col-sm-10">Last Name:</dt>
            <dd class="col-sm-18">@Model.LastName</dd>

            <dt class="col-sm-10">Email:</dt>
            <dd class="col-sm-18">@Model.Email</dd>

            <dt class="col-sm-10">Phone Number:</dt>
            <dd class="col-sm-18">@Model.PhoneNumber</dd>

            <dt class="col-sm-10">Address:</dt>
            <dd class="col-sm-18">@Model.Address</dd>

            <dt class="col-sm-10">Role ID:</dt>
            <dd class="col-sm-18">@Model.RoleId</dd>
        </dl>
       
    }
    else
    {
        <p>Employee not found.</p>
    }
</div>
    <div class="mt-3">
        <a asp-controller="ProjectEmployee" asp-action="ProjectsForEmployee" asp-route-id="@Model.EmployeeId"
            class="btn btn-info"><i class="bi bi-view-list"></i> View Associated Projects</a>

        <a asp-action="Index" class="btn btn-dark" style="margin-left: 5px;"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
    </div>
</div>
