@model PPM.Model.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container">
    <h2 class="text-center font-weight-bold text-uppercase">Update Employee</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="EmployeeId" />

         <div class="form-group">
            <label asp-for="EmployeeId" class="font-weight-bold text-uppercase">Employee ID:</label>
            <span  class="form-control-plaintext" style="margin-top: 5px; border: 1px solid darkslategray;">@Model.EmployeeId</span>
        </div>
          <div class="form-group">
            <label asp-for="FirstName" aria-disabled="true" class="font-weight-bold text-uppercase">First Name:</label>
            <input asp-for="FirstName" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>

        <div class="form-group">
            <label asp-for="LastName" aria-disabled="true" class="font-weight-bold text-uppercase">Last Name:</label>
            <input asp-for="LastName" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>

        <div class="form-group">
            <label asp-for="Email" aria-disabled="true" class="font-weight-bold text-uppercase">Email:</label>
            <input asp-for="Email" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" aria-disabled="true" class="font-weight-bold text-uppercase">Phone
                Number:</label>
            <input asp-for="PhoneNumber" class="form-control"
                style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>
        <div class="form-group">
            <label asp-for="Password" aria-disabled="true" class="font-weight-bold text-uppercase">Password:</label>
            <input asp-for="Password" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>

        <div class="form-group">
            <label asp-for="Address" aria-disabled="true" class="font-weight-bold text-uppercase">Address:</label>
            <input asp-for="Address" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>

        <div class="form-group">
            <label asp-for="RoleId" aria-disabled="true" class="font-weight-bold text-uppercase">Role ID:</label>
            <input asp-for="RoleId" class="form-control" style="margin-top: 5px; border: 1px solid darkslategray;" />
        </div>

        <div class="text-center">
            <div class="form-group" style="margin-top: 15px;">
                <button type="submit" class="btn btn-success"><i class="bi bi-save2-fill"></i>Save Changes</button>
                    <a asp-action="Index" class="btn btn-danger" style="margin-left: 9px;"><i
                            class="bi bi-x-octagon-fill"></i>Cancel</a>
            </div>
        </div>
    </form>
</div>